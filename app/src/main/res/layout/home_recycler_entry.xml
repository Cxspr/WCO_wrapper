<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout2"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/margin_small"
    android:layout_marginRight="@dimen/margin_small">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="?attr/colorPrimaryDark"
        app:cardCornerRadius="10dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/wl_series_Img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@android:drawable/edit_text" />

            <ImageButton
                android:id="@+id/continue_remove"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="#00FFFFFF"
                android:scaleType="centerInside"
                android:tint="#FF0000"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="@+id/wl_series_Img"
                app:layout_constraintTop_toTopOf="@+id/wl_series_Img"
                app:srcCompat="@drawable/ic_remove_filled"
                tools:visibility="visible" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:weightSum="2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/wl_series_Img">

                <LinearLayout
                    android:id="@+id/wg_button_bar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent">

                    <ImageButton
                        android:id="@+id/continue_play"
                        android:layout_width="0dp"
                        android:layout_height="35dp"
                        android:layout_weight=".99"
                        android:background="#00FFFFFF"
                        android:scaleType="centerInside"
                        android:tint="#FFFFFF"
                        android:visibility="gone"
                        app:srcCompat="@drawable/ic_play_arrow"
                        tools:visibility="visible" />

                    <View
                        android:id="@+id/divider4"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight=".02"
                        android:background="?android:attr/listDivider" />

                    <ImageButton
                        android:id="@+id/continue_next"
                        android:layout_width="0dp"
                        android:layout_height="35dp"
                        android:layout_weight=".99"
                        android:background="#00FFFFFF"
                        android:scaleType="centerInside"
                        android:tint="#FFFFFF"
                        android:visibility="gone"
                        app:srcCompat="@drawable/ic_skip_next"
                        tools:visibility="visible" />
                </LinearLayout>

                <TextView
                    android:id="@+id/wl_series_title"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:layout_marginStart="4dp"
                    android:layout_marginEnd="4dp"
                    android:gravity="center"
                    android:text="TextView"
                    android:textAlignment="gravity"
                    android:textSize="12sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</FrameLayout>